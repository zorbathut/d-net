	cp /usr/bin/mingwm10.dll deploy
	cp -r vecedit deploy
	$(strip)
	$(postpackage)
	cp \\\\192.168.100.4\\zorba\\www\\d-net\\$(PACKAGESUBDIR)\\Dnet\ Latest\ Windows.zip \\\\192.168.100.4\\zorba\\www\\d-net\\$(PACKAGESUBDIR)\\Dnet\ Latest\ Editor.zip

%.g.o: %.cpp
	nice $(CPP) $(GAMECPPFLAGS) -c -o $@ $<
  
%.g.d.o: %.cpp
	nice $(CPP) $(GAMECPPFLAGS) -c -o $@ $<

%.g.S: %.cpp
	nice $(CPP) $(GAMECPPFLAGS) -c -Wa,-a,-ad $< > $@

%.g.d: %.cpp
	nice bash -ec '$(CPP) $(GAMECPPFLAGS) -MM $< | sed "s!$*.o!$*.g.o $*.g.d.o $@!g" > $@'

%.e.o: %.cpp
	nice $(CPP) $(EDITORCPPFLAGS) -c -o $@ $<
  
%.e.d.o: %.cpp
	nice $(CPP) $(EDITORCPPFLAGS) -c -o $@ $<

%.e.S: %.cpp
	nice $(CPP) $(EDITORCPPFLAGS) -c -Wa,-a,-ad $< > $@

%.e.d: %.cpp functor.h  # some of these files use functor, so we make sure functor.h is built first
	nice bash -ec '$(CPP) $(EDITORCPPFLAGS) -MM $< | sed "s!$*.o!$*.e.o $*.e.d.o $@!g" > $@'

%.c.o: %.cpp
	nice $(CPP) $(CONSOLECPPFLAGS) -c -o $@ $<
  
%.c.d.o: %.cpp
	nice $(CPP) $(CONSOLECPPFLAGS) -c -o $@ $<

%.c.S: %.cpp
	nice $(CPP) $(CONSOLECPPFLAGS) -c -Wa,-a,-ad $< > $@

%.c.d: %.cpp
	nice bash -ec '$(CPP) $(CONSOLECPPFLAGS) -MM $< | sed "s!$*.o!$*.c.o $*.c.d.o $@!g" > $@'

data/shopcache.dwh: d-net $(DATAFILES)
	./d-net.exe --generateCachedShops=0.99 || ( rm -f $@ && false )

export: d-net tools/generateWeaponGraph.py
	./d-net.exe --generateWeaponStats || ( rm -f $@ && false )
	/cygdrive/c/Python25/python.exe tools/generateWeaponGraph.py # this is not ideal

functor_gen.exe: $(FUNCTORSOURCES:=.c.o)
	nice $(CPP) -o $@ $(FUNCTORSOURCES:=.c.o) $(CONSOLELDFLAGS)

functor.h: functor_gen.exe functor.h.in
	./functor_gen.exe || ( rm -f $@ && false )
  
merger.exe: $(MERGERSOURCES:=.c.o)
	nice $(CPP) -o $@ $(MERGERSOURCES:=.c.o) $(CONSOLELDFLAGS)

$(patsubst %,notes_%.csv,$(MERGETYPES)): .notes_flag
	@:

.notes_flag: notes.ods
	$(OO) -invisible "notes.ods" "macro://notes/Standard.Convert.Convert" || ( rm -f $(patsubst %,notes_%.csv,$(MERGETYPES)) && false )
	@touch .notes_flag

data/base/%.dwh: data/base/%.dwh.unmerged notes_%.csv merger.exe
	./merger.exe notes_$*.csv data/base/$*.dwh.unmerged data/base/$*.dwh || ( rm -f $@ && false )

